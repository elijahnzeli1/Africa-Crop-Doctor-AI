# Environment Variables for Africa Crop Doctor AI Backend

# Server Configuration
NODE_ENV=development
PORT=5000

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
PREDICTION_RATE_LIMIT=10

# Model Configuration
MODEL_PATH=../models/pytorch_model.bin
MODEL_VERSION=1.0.0

# API Keys (if needed for external services)
# WEATHER_API_KEY=your_weather_api_key
# AGRICULTURE_DATA_API_KEY=your_agriculture_api_key

# Database (if you add database functionality later)
# DATABASE_URL=mongodb://localhost:27017/africa_crop_doctor
# DB_NAME=africa_crop_doctor

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
# EMAIL_SERVICE_API_KEY=your_email_service_key
# SMS_SERVICE_API_KEY=your_sms_service_key